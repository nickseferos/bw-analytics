<p id="notice"><%= notice %></p>

<h1>Terminals</h1>

<table>
  <thead>
    <tr>
      <th>Terminal</th>
      <th>Street</th>
      <th>City</th>
      <th>Postal</th>
      <th>Country</th>
      <th>Port</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @terminals.each do |terminal| %>
      <tr>
        <td><%= terminal.terminal %></td>
        <td><%= terminal.street %></td>
        <td><%= terminal.city %></td>
        <td><%= terminal.postal %></td>
        <td><%= terminal.country_id %></td>
        <td><%= terminal.port_id %></td>
        <td><%= link_to 'Show', terminal %></td>
        <td><%= link_to 'Edit', edit_terminal_path(terminal) %></td>
        <td><%= link_to 'Destroy', terminal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

