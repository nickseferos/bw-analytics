<!--**********************************
Header start
***********************************-->
<div class="header">
  <div class="header-content clearfix">
    <div class="nav-control">
      <div class="hamburger">
        <span class="toggle-icon"><i class="icon-menu"></i></span>
      </div>
    </div>
    <div class="header-left">
      <div class="input-group icons">
        <div class="input-group-prepend">
          <span class="input-group-text bg-transparent border-0 pr-2 pr-sm-3" id="basic-addon1"><i class="mdi mdi-magnify"></i></span>
        </div>
        <input type="search" class="form-control" placeholder="Search Crane Operators" aria-label="Search Dashboard">
        <div class="drop-down   d-md-none">
          <form action="#">
            <input type="text" class="form-control" placeholder="Search">
          </form>
        </div>
      </div>
    </div>
    <div class="header-right">
      <ul class="clearfix">
        <li class="icons dropdown">
          <div class="user-img c-pointer position-relative"   data-toggle="dropdown">
            <span class="activity active"></span>
            <img src="images/user/1.png" height="40" width="40" alt="">
          </div>
          <div class="drop-down dropdown-profile   dropdown-menu">
            <div class="dropdown-content-body">
              <ul>
                <li>Welcome <%= current_user.fname %></li>
                <li><%= current_user.terminal.terminal %> in <%= current_user.terminal.city %></li>
                <li>
                  <%= link_to "#{current_user.terminal.terminal} Stats!", root_path %>
                </li>

                <hr class="my-2">
                <li>
                  <%= link_to 'Account Settings', edit_user_registration_path %>
                </li>
                <li>
                  <%= link_to 'Sign Out', destroy_user_session_path, redirect_to: new_user_session_path %>
                </li>
                <li><%= link_to 'Request a Feature', url: "http://mailto:nick@boxwhere.com?subject=feature_request" %></li>
              </ul>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>
