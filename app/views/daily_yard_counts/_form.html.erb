<form class="mt-5 mb-5 login-input">
  <%= form_with(model: daily_yard_count, local: true) do |form| %>
    <% if daily_yard_count.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(daily_yard_count.errors.count, "error") %> prohibited this daily_yard_count from being saved:</h2>

        <ul>
          <% daily_yard_count.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :date, class: 'from-control' %>
        <%= form.date_select :date, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :turntime %>
        <%= form.time_select :turntime, include_seconds: true, prompt: true, class: 'form-control'%>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :trucks %>
        <%= form.number_field :trucks, class: 'form-control', placeholder: 'Number of Truck Visits' %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :transactions %>
        <%= form.number_field :transactions, class: 'form-control', placeholder: 'Number of Transactions' %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :detained %>
        <%= form.number_field :detained, class: 'form-control', placeholder: 'Number Detained' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :notes %>
    <%= form.text_area :note, class: 'form-control', placeholder: 'Notes for the day. Any significant events causing delays?' %>
  </div>
  <div class="form-group">





  <div class="form-group">
    <%= form.collection_select(:terminal_id, Terminal.all, :id, :terminal, include_blank: 'Select Your Terminal', class: 'dropdown-menu') %>
  </div>
  <%= form.submit class: 'btn login-form__btn submit w-100' %>
</form>
<% end %>
