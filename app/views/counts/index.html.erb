<p id="notice"><%= notice %></p>

<h1>Counts</h1>

<table>
  <thead>
    <tr>
      <th>Move</th>
      <th>Time exception</th>
      <th>Crane operator</th>
      <th>Shift</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @counts.each do |count| %>
      <tr>
        <td><%= count.move %></td>
        <td><%= count.time_exception %></td>
        <td><%= count.crane_operator_id %></td>
        <td><%= count.shift_id %></td>
        <td><%= link_to 'Show', count %></td>
        <td><%= link_to 'Edit', edit_count_path(count) %></td>
        <td><%= link_to 'Destroy', count, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

