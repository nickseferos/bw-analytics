<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <div class="col-lg-12">
            <div class="card-title">
              <h4><%= @voyage.vessel.name %> <%= @voyage.number %></h4><%= link_to 'Edit Voyage Number', edit_voyage_path(@voyage), class: 'btn btn-outline-secondary' %>
            </div>

          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <div class="col-lg-12">
            <div class="card-title">
              <% if @voyage.port_calls.any? %>
                <%= render @voyage.port_calls %>
              <% end %>
            </div>

          </div>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <div class="col-lg-12">
            <div class="card-title">
              <h4>Add Port Call to Voyage</h4>
              <%= render 'port_calls/form', port_call: @voyage.port_calls.build %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
