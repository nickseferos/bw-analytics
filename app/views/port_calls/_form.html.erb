<%= form_with(model: [ @voyage, port_call ], local: true) do |form| %>
  <% if port_call.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(port_call.errors.count, "error") %> prohibited this port_call from being saved:</h2>

      <ul>
        <% port_call.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">

    <%= form.hidden_field :voyage_id %>
  </div>
  <div class="field">
    <%= form.label :terminal_id %>
    <%= form.collection_select(:terminal_id, Terminal.all, :id, :terminal) %>
  </div>

  <div class="field">

    <%= form.label :eta %>
    <%= form.datetime_select :eta %>
  </div>

  <div class="field">
    <%= form.label :ata %>
    <%= form.datetime_select :ata %>
  </div>

  <div class="field">
    <%= form.label :etd %>
    <%= form.datetime_select :etd %>
  </div>

  <div class="field">
    <%= form.label :atd %>
    <%= form.datetime_select :atd %>
  </div>

  <div class="field custom-control custom-switch">
    <%= form.label :departed, class: 'form-check-label' %>
    <%= form.check_box :departed, class: 'form-check-input' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-outline-primary' %>
  </div>
<% end %>
